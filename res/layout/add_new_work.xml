<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add_new_work_bg" >
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">
        
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
            <TextView 
                android:id="@+id/prev_date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Nov 9, 2014"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
		        android:onClick="openDatePicker"
		        android:clickable="true"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="20sp"
                android:background="@drawable/alpha_bg" />
            
	        <EditText 
	            android:id="@+id/txt_client_name"
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="20dp"
	            android:hint="@string/hint_client_name"
	            android:background="@drawable/text_bg"/>
	        
	        <EditText 
	            android:id="@+id/txt_price"
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="20dp"
	            android:hint="@string/hint_amount"
	            android:inputType="number"
	            android:background="@drawable/text_bg"/>
	        
	        <EditText 
	            android:id="@+id/txt_desc"
	            android:layout_width="match_parent"
	            android:layout_height="200dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="20dp"
	            android:hint="@string/hint_desc"
	            android:inputType="textMultiLine"
	            android:gravity="top|left"
	        	android:layout_marginBottom="20dp"
	            android:background="@drawable/text_bg" />
	        
	    </LinearLayout>
    </ScrollView>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:onClick="saveNewWork"
        android:scaleType="fitXY"
        android:src="@drawable/btn_save" />

</RelativeLayout>
